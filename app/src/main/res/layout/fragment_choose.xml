<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.ChooseFragment">

    <Button
            android:text="I'm a Student"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:id="@+id/student_button"
            android:backgroundTint="@color/white"
            android:textColor="#4f8df0"
            android:elevation="2dp"
            android:drawableStart="@drawable/reading"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="164dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <Button
            android:text="I'm a Parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/parent_button"
            android:backgroundTint="@color/white"
            android:textColor="#4f8df0"
            android:elevation="2dp"
            android:drawableStart="@drawable/family_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:text="I'm a Teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teacher_button"
            android:backgroundTint="@color/white"
            android:textColor="#4f8df0"
            android:drawableStart="@drawable/presentation"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/parent_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/student_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>