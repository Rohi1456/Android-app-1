<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.LoginFragment">

    <TextView
            android:id="@+id/textSignInStatus"
            android:text="Sign in status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.331"/>

    <TextView
            android:id="@+id/textTokenStatus"
            android:text="text token status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textSignInStatus"
            app:layout_constraintEnd_toEndOf="@+id/textSignInStatus"
            app:layout_constraintTop_toBottomOf="@+id/textSignInStatus"
            android:layout_marginTop="56dp"/>

    <Button
            android:id="@+id/button_signin"
            android:text="Signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textTokenStatus"
            app:layout_constraintEnd_toEndOf="@+id/textTokenStatus"
            app:layout_constraintTop_toBottomOf="@+id/textTokenStatus"
            android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.473"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/uid"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/button_signin"
            app:layout_constraintStart_toStartOf="@+id/button_signin"
            app:layout_constraintEnd_toEndOf="@+id/button_signin"/>

</androidx.constraintlayout.widget.ConstraintLayout>