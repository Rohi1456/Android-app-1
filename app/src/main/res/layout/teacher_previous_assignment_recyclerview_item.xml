<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:orientation="vertical"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

        <TextView
                android:text="Class XII-A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/class_name_textView"
                android:textColor="@color/black"
                />

        <TextView
                android:text="Please complete the give assignment and submit if before 15 March 2019"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:id="@+id/assignment_noteTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/class_name_textView"
                />

        <TextView
                android:text="15 hour ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/assignment_assign_timeTextView"
                android:layout_above="@+id/assignment_noteTextView"
                android:layout_alignParentEnd="true"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_attach_file"
                android:layout_alignBottom="@+id/assignment_noteTextView"
                android:layout_alignParentEnd="true"
                android:id="@+id/assignment_attachImage"
                android:layout_toEndOf="@+id/assignment_noteTextView"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>